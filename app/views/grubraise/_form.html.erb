
<div class="raisecontainer">
              <ol>
              <li><label for="user_name" class="error">Name cannot be blank</label></li>
              <li><label for="user_email" class="error" >Email is not a valid email address.</label></li>
              <li><label for="user_school" class="error">School Name cannot be blank.</label></li>
              </ol>
              </div>
              <form action="/users" class="new_users" id="valid_form" method="post">
              <fieldset>
              <div class="field">
              <label for="user_name">Name:</label>
              <input id="user_name" name="user[name]" class="{validate:{required:true}}" size="30" value="" type="text" />
              </div>
              <div class="clearfix"></div>
              <div class="field">
              <label for="user_school">School:</label>
              <input id="user_school" name="user[school]" class="{validate:{required:true}}" value="" size="30" type="text" />
              </div>
              <div class="clearfix"></div>
              <div class="field">
              <label for="user_email">Email:</label>
              <input id="user_email"  name="user[email]" class="{validate:{required:true,email:true}}" value="" size="30" type="text" />
              </div>
              
              <div class="field">
              <label>I am a...</label>
              <select id="role_id" name="user[role_id]">
                     <option value = "1">Parent</option>
                     <option value = "2">Teacher</option>
                     <option value = "3">Friend</option>
                     <option value = "4">PTA Leader</option>
              </select>
              </div>
              <div class="clearfix"></div>
              <div class="clearfix"></div>
              <input type="submit" value="Start Raising" class="submit btn"/>               
              </fieldset>
              </form> 